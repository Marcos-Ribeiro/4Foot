<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.fourtech.fourfoot.Cadastre_seActivity" >

    <EditText
        android:id="@+id/edtNomeUsuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Usuário" >
       
       	<requestFocus />
	</EditText>
	        
	 <EditText
	     android:id="@+id/edtApelido"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_below="@+id/edtNomeUsuario"
	     android:layout_marginTop="10dp"
	     android:ems="10"
	     android:hint="Apelido"
	     android:inputType="textPersonName" />

	 <EditText
	     android:id="@+id/edtSenha"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_below="@+id/edtApelido"
	     android:layout_marginTop="10dp"
	     android:ems="10"
	     android:hint="Senha"
	     android:inputType="textPassword" />

	 <EditText
	     android:id="@+id/edtConfirmaSenha"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_below="@+id/edtSenha"
	     android:layout_marginTop="10dp"
	     android:ems="10"
	     android:hint="Confirmar Senha"
	     android:inputType="textPassword" />

	 <Button
	     android:id="@+id/edtSalvarUsuario"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_alignParentBottom="true"
	     android:layout_centerHorizontal="true"
	     android:text="Salvar"
	     android:background="#0088CC" 
	     android:textColor="#f9f9f9"/>

	 <EditText
	     android:id="@+id/edtPosicao"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_alignLeft="@+id/edtConfirmaSenha"
	     android:layout_below="@+id/edtConfirmaSenha"
	     android:layout_marginTop="18dp"
	     android:ems="10"
	     android:hint="Posição" />

	 <EditText
	     android:id="@+id/edtDataNascimento"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_alignLeft="@+id/edtPosicao"
	     android:layout_below="@+id/edtPosicao"
	     android:layout_marginTop="18dp"
	     android:ems="10"
	     android:hint="Data de Nascimento"
	     android:inputType="date" />

</RelativeLayout>
